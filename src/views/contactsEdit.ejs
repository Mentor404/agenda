<%- include('includes/head'); %>

<main class="flex-grow">
    <section class="mx-auto lg:w-10/12 flex-col lg:justify-center mt-5">
        <div class="register-container px-4 mx-6">

            <h2 class="font-semibold text-4xl md:text-5xl xl:text-6xl text-gray-600">Editar o contato <%= contact.cname %></h2>
            <h2 class="text-xl xl:text-2xl text-gray-500 mb-4">Altere os dados do seu contato</h2>

            <form action="/contacts/edit/<%= contact._id %>" id="register-form" method="post">
                <input type="hidden" name="_csrf" value="<%= csrfToken %>">

                <div class="flex flex-col">
                    <label for="cname">Nome</label>
                    <input type="text" name="cname" id="cname" value="<%= contact.cname %>" required>
                </div>

                <div class="flex flex-col">
                    <label for="cphone">Telefone</label>
                    <input type="tel" name="cphone" id="cphone" value="<%= contact.cphone %>" required>
                </div>

                <div class="flex flex-col">
                    <label for="cemail">Email</label>
                    <input type="email" name="cemail" id="cemail" value="<%= contact.cemail %>" required>
                </div>
                <%- include('includes/messages'); %>
                <button class="bg-gray-600 hover:bg-gray-500 py-2 text-white mt-2">Alterar contato</button>
            </form>
        </div>
    </section>
</main>

<%- include('includes/footer'); %>
